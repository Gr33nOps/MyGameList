// ==================== STATISTICS ====================

app.get('/api/stats', async (req, res) => {
    try {
        // Get platform statistics (total games, users, reviews, etc.)
        const [totalGames] = await pool.execute('SELECT COUNT(*) as count FROM games');
        const [totalUsers] = await pool.execute('SELECT COUNT(*) as count FROM users');
        
        res.json({
            stats: {
                total_games: totalGames[0].count,
                total_users: totalUsers[0].count
            }
        });
    } catch (error) {
        res.status(500).json({ error: 'Internal server error' });
    }
});

// ==================== ERROR HANDLING ====================

// 404 handler
app.use('*', (req, res) => {
    res.status(404).json({ error: 'Route not found' });
});

// Global error handler
app.use((error, req, res, next) => {
    console.error('Global error:', error);
    res.status(500).json({ error: 'Internal server error' });
});

// ==================== SERVER START ====================

app.listen(PORT, () => {
    console.log(`ðŸš€ MyGameList server running on port ${PORT}`);
    console.log(`ðŸ“Š Health check: http://localhost:${PORT}/api/health`);
});

// Graceful shutdown
process.on('SIGTERM', async () => {
    console.log('Shutting down gracefully...');
    await pool.end();
    process.exit(0);
});

